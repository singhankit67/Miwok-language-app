<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tab_filter"
            style="@style/editor_bottom_tab"
            android:text="@string/filter"
            app:drawableTopCompat="@mipmap/ic_filter" />

        <TextView
            android:id="@+id/tab_effect_audio_mix"
            style="@style/editor_bottom_tab"
            android:text="@string/music"
            app:drawableTopCompat="@mipmap/ic_music" />
        <TextView
            android:id="@+id/tab_effect_overlay"
            style="@style/editor_bottom_tab"
            android:text="@string/gif"
            app:drawableTopCompat="@mipmap/ic_gif" />

        <TextView
            android:id="@+id/tab_effect_caption"
            style="@style/editor_bottom_tab"
            android:text="@string/subtitle"
            app:drawableTopCompat="@mipmap/ic_subtitle" />
        <TextView
            android:id="@+id/tab_effect_mv"
            style="@style/editor_bottom_tab"
            android:text="@string/mv"
            app:drawableTopCompat="@mipmap/ic_mv" />
        <TextView
            android:id="@+id/tab_effect_sound"
            style="@style/editor_bottom_tab"
            android:text="@string/sound"
            app:drawableTopCompat="@mipmap/ic_sound" />
        <TextView
            android:id="@+id/tab_effect_filter"
            style="@style/editor_bottom_tab"
            android:text="@string/effect"
            app:drawableTopCompat="@mipmap/ic_effect" />
        <TextView
            android:id="@+id/tab_effect_time"
            style="@style/editor_bottom_tab"
            android:text="@string/speed_time"
            app:drawableTopCompat="@mipmap/ic_speed_time" />

        <TextView
            android:id="@+id/tab_effect_transition"
            style="@style/editor_bottom_tab"
            android:text="@string/transition"
            app:drawableTopCompat="@mipmap/ic_transition" />

        <TextView
            android:id="@+id/tab_paint"
            style="@style/editor_bottom_tab"
            android:drawableTop="@mipmap/ic_paint"
            android:text="@string/paint"/>
        <TextView
            android:id="@+id/tab_cover"
            style="@style/editor_bottom_tab"
            android:drawableTop="@mipmap/ic_cover"
            android:text="@string/cover"/>

    </LinearLayout>
</HorizontalScrollView>