<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/action_bar_bg"
    android:minHeight="64dp" >

    <ImageView
        android:id="@+id/back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="14dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_240" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_music"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/action_bar_bg"
        android:background="@drawable/add_music_custom_button"
        android:text="Add a music"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textScaleX="1"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/next"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        style="@style/NextBtnStyle"/>

</RelativeLayout>