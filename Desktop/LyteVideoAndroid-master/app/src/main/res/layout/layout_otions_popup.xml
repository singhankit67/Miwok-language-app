<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/optionsLayout"
    android:background="@drawable/corner_radius"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="40dp"
        android:paddingBottom="34dp"
        android:background="@color/colorDark"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/save_layout"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/save"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:backgroundTint="#F6D8B9"
                android:background="@drawable/corner_radius">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/saveImgBtn"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_bookmark_save" />

            </LinearLayout>
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/grayColor"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/download"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:backgroundTint="#D7E7F4"

                android:background="@drawable/corner_radius">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/downloadImgBtn"
                    android:layout_gravity="center"

                    android:src="@drawable/ic_baseline_arrow_downward_download" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Download"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/grayColor"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/report_layout"
            android:layout_marginStart="20dp"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/report"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:backgroundTint="#FAB6C3"
                android:gravity="center"
                android:background="@drawable/corner_radius"
                >

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:id="@+id/reportImgBtn"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_warning_report" />

            </LinearLayout>
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="Report"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/grayColor"
                android:gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>