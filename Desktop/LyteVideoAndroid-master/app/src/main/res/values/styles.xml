<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Secondary</item>
        <item name="colorPrimaryDark">@color/Dark</item>
        <item name="colorAccent">@color/Primary</item>

        <!-- Window Decor -->
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:statusBarColor">@color/black</item>

        <item name="android:navigationBarColor">@color/black</item>

        //shubham_keshri

        <item name="android:windowTranslucentNavigation">false</item>

    </style>


    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">

        <item name="fontFamily">@font/roboto</item>

    </style>

    <style name="dialogs_custom" parent="Theme.MaterialComponents.Light.Dialog.Alert">

        <item name="fontFamily">@font/roboto</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>



        <style name="transparent_status" parent="Theme.MaterialComponents.Light.NoActionBar">
            <item name="colorPrimary">@color/white</item>
            <item name="colorPrimaryDark">@color/black</item>
            <item name="colorAccent">@color/black</item>
            <item name="windowActionBar">false</item>
            <item name="windowNoTitle">true</item>
            <item name="fontFamily">@font/roboto</item>
        </style>

    <style name="Transparent" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>



    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">     @android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="keyBoardStyle" parent="">
        <item name="android:windowSoftInputMode">adjustResize</item>

    </style>


    <style name="editor_bottom_tab">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="NextBtnStyle">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_next_selector</item>
        <item name="android:layout_height">27dp</item>
        <item name="android:layout_width">57dp</item>
        <item name="android:text">Next</item>
    </style>

    <style name="TextDlgStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CardViewStyle" parent="android:Widget.TextView">
        <!-- //   <item name="android:foreground">@drawable/selector_bg_card</item> -->
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="emojiKeyboardStyle" parent="">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white_transparent</item>
        <item name="android:gravity">center</item>
    </style>
</resources>